       <nav class="navbar navbar-inverse navbar-fixed-top" id="topbar">
         <div class="container-fluid">
           <div class="navbar-header">
              <a class="navbar-brand" id="navbrand" href="/">
                <img src= "http://www.iconninja.com/files/424/467/635/amazon-media-social-logo-icon.svg" height="50" width="50">
              </a>
           </div>
           <ul class="nav nav-pills" id="menu">
             <li role="presentation" class="active"><a href="#">Sign in</a></li>
             <li role="presentation"><a href="books">Books</a></li>
             <li role="presentation"><a href="authors">Authors</a></li>
           </ul>
         </div>
       </nav></div>
     </div>
  </div>

<!-- The section bellow is actually our slider. But it's called carousel.  -->
